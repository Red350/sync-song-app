<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/rowlobby_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Lobby name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rowlobby_tv_nummembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rowlobby_tv_name"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:minWidth="50dp"
        android:text="42" />

    <TextView
        android:id="@+id/rowlobby_tv_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rowlobby_tv_name"
        android:layout_toEndOf="@id/rowlobby_tv_nummembers"
        android:drawableStart="@drawable/ic_music_note_black_24dp"
        android:text="Genre" />

    <ImageView
        android:id="@+id/rowlobby_iv_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_lock_outline_black_24dp" />

</RelativeLayout>