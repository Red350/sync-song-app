<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_track"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rowtrack_iv_artwork"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_broken_image_black_64dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rowtrack_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/ic_music_note_black_24dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="loading..."
            android:textSize="18sp"
            tools:text="Song name" />

        <TextView
            android:id="@+id/rowtrack_tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="loading..."
            android:textSize="14sp"
            tools:text="Artist name" />

    </LinearLayout>

</LinearLayout>